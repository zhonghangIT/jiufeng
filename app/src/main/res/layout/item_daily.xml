<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016年"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/textview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11月12日"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:paddingTop="12dp"
        android:paddingLeft="11dp"
        android:paddingRight="13dp"
        android:paddingBottom="10dp"
        android:background="@drawable/background_daily_item"
        android:orientation="vertical"
        android:layout_weight="1">
    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭祝天堂快乐！护佑家人！"
        android:textColor="@color/black"

        android:textSize="15sp"/>
        <TextView
            android:id="@+id/textview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一路走好，我敬爱的父亲！今天是秋节 ，每逢佳节倍思亲，但请明月相思，今 天是中秋节，每逢佳节倍亲，但请明月 寄相思，今天中秋节每逢佳节倍思亲， 但明月寄相思。"
            android:textColor="#565656"
            android:textSize="14sp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="7dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
            <TextView
                android:id="@+id/textview_name"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:textColor="#A0A6A6"
                android:textSize="12sp"
                android:text="萍萍萍萍萍萍萍萍萍萍萍萍萍萍萍萍萍萍萍萍 为逝者 鞠躬"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textview_ip"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:textColor="#A0A6A6"
                android:layout_height="wrap_content"
                android:text="115.112.**.***"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>